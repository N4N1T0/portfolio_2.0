---
import { cn } from '@/lib/utils'
import { Image } from 'astro:assets'
import { userData } from '@/constants/site-data'
import FlipSentences from '@/components/ui/FlipSentences.astro'
---

<div class='screen-line-after flex border-x border-edge container'>
  <div class='shrink-0 border-r border-edge'>
    <div class='mx-[2px] my-[3px]'>
      <Image
        class='size-32 rounded-full ring-1 ring-border ring-offset-2 ring-offset-background select-none sm:size-40'
        alt={`${userData.displayName}'s avatar`}
        src={userData.avatar}
        width={512}
        height={512}
        quality={100}
        priority
      />
    </div>
  </div>

  <div class='flex flex-1 flex-col'>
    <div
      class={cn(
        'flex grow items-end pb-1 pl-4',
        'bg-size-[10px_10px] [--pattern-foreground:var(--color-edge)]/56 sm:bg-[repeating-linear-gradient(315deg,var(--pattern-foreground)_0,var(--pattern-foreground)_1px,transparent_0,transparent_50%)]'
      )}
    >
      <div class='text-xs select-none text-muted-foreground/50 w-full'>
        <pre>
          <!-- TODO: Funny thing to have -->
          <code class="p-0 line-clamp-5">
{`const url = Astro.site`}
          </code>
        </pre>
      </div>
    </div>

    <div class='border-t border-edge'>
      <h1 class='flex items-center pl-4 text-3xl font-semibold'>
        {userData.displayName}
      </h1>

      <div
        class='h-12 border-t border-edge py-1 pl-4 sm:h-auto overflow-hidden'
      >
        <FlipSentences />
      </div>
    </div>
  </div>
</div>
