---
import Header from '@/components/layout/header/index.astro'
import Footer from '@/components/layout/footer/index.astro'
import Head from '@/components/layout/head/index.astro'

import '@/styles/global.css'

interface Props {
  title?: string | undefined
  description?: string | undefined
  image?: ImageMetadata
  ld?: string
}

const {
  title = 'Default Title',
  description = 'Default description for the website',
  image,
  ld = 'summary_large_image'
} = Astro.props

const lang = Astro.currentLocale
---

<!doctype html>
<html lang={lang}>
  <Head
    title={title}
    description={description}
    lang={lang}
    image={image}
    ld={ld}
  />
  <body class='relative antialiased'>
    <Header />
    <main class='max-w-screen overflow-x-hidden px-2 mt-12'>
      <slot />
    </main>
    <Footer />
  </body>
</html>
